% Parameters to be included in preamble
\newcommand{\course}[1]{\newcommand{\homework@course}{#1}}
\newcommand{\assignment}[1]{\newcommand{\homework@assignment}{#1}}
\newcommand{\semester}[1]{\newcommand{\homework@semester}{#1}}

\AtBeginDocument{
    % Choose title format based on which parameters are defined
    \title{%
        \ifthenelse{\isundefined{\homework@course}}%
            {\homework@assignment}%
            {\ifthenelse{\isundefined{\homework@semester}}%
                {\homework@course\ -- \homework@assignment}%
                {\homework@course, \homework@semester\ -- \homework@assignment}}
    }
    \maketitle
}

